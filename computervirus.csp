	.EQU CODE, $49
	.EQU @, CODE
	.EQU WRITE, $D00
	.EQU @, $000
	.EQU KEYBOARD_STATUS, $000
	.EQU KEYBOARD_DATA, $001
	LDX# $000	
	LDF# $000
	LDA# $000

PASSWORD:	.CHAR 'get pwned'
WORD_LENGTH:	.WORD 9


POLL_KEYBD:	INB KEYBOARD_STATUS
	NOP
	JGE POLL_KEYBD
	INB KEYBOARD_DATA
	STA+ WRITE
	ADF# $001
	LDX# $000

CHECK:	LDC CODE
	CMA+ ! WRITE-WORD_LENGTH
	JNE POLL_KEYBD
	AOC# WORD_LENGTH
	JEQ ERASE
	JMP CHECK
	
	
ERASE:	LDX# 0 
	LDA#0 
LOOP:	STA+ 0
	AOC# $050
	JGE END
	JMP LOOP

END:	HLT
	

