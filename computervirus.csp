	.EQU @, $000
	.EQU KEYBOARD_STATUS, $000
	.EQU KEYBOARD_DATA, $001
	LDX# $000

PASSWORD:	.CHAR 'get pwned'
WORD_LENGTH:	.WORD 9

POLL_KEYBD:	INB KEYBOARD_STATUS
	NOP
	JGE POLL_KEYBD
	INB KEYBOARD_DATA
	STA+ $D00
	CMX# WORD_LENGTH
	JGE CHECK
	ADX# $001
	JMP POLL_KEYBD

CHECK:	ADX# $001
	
	
ERASE:	.equ @, $000
	LDA# $FFF
	STA $000
	LDX# $001
	LDA# $000
	STA+ $001
	ADX# $001
	CMX $000
	JEQ END
	
END:	HLT
	

