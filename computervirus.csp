	.EQU @, $000
	.EQU KEYBOARD_STATUS, $000
	.EQU KEYBOARD_DATA, $001
	LDX# $000

PASSWORD:	.CHAR 'get pwned'
WORD_LENGTH:	.WORD 9

POLL_KEYBD:	INB KEYBOARD_STATUS
	NOP
	JGE POLL_KEYBD
	INB KEYBOARD_DATA
	STA+ $D00
	CMX# WORD_LENGTH
	JGE CHECK
	ADX# $001
	JMP POLL_KEYBD

CHECK:	
	
ERASE:	
	
END:	HLT
	

